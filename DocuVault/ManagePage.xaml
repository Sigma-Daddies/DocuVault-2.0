<Page x:Class="DocuVault.ManagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Manage Files">

    <Grid>
        <!-- Main Content Area -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- File Upload Button -->
        <Button Name="UploadFileButton" Content="Upload File" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Click="UploadFileButton_Click"/>

        <!-- File List (ListView) -->
        <ListView Name="FileListView" Grid.Row="1" Margin="10" SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <!-- Number Column -->
                    <GridViewColumn Header="No." DisplayMemberBinding="{Binding Index}" Width="50"/>
                    <!-- File Name Column -->
                    <GridViewColumn Header="File Name" DisplayMemberBinding="{Binding FileName}" Width="200"/>
                    <!-- Upload Date Column -->
                    <GridViewColumn Header="Upload Date" DisplayMemberBinding="{Binding UploadDate}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
